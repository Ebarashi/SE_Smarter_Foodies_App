{
    "title": "Boiling Water Pastry",
    "Category": "Pie Crusts",
    "Ingredients": [
        {
            "1": "1 cup shortening"
        },
        {
            "2": "0.5 cup boiling water"
        },
        {
            "3": "2 cups cake flour"
        },
        {
            "4": "1 pinch salt"
        }
    ],
    "Directions": [
        {
            "1": "Place shortening into a heat-proof bowl. Pour in boiling water and whip mixture until creamy."
        },
        {
            "2": "Mix together flour and salt in a separate bowl. Add flour mixture to shortening mixture. Stir until pastry stops sticking to the sides of the bowl. Refrigerate pastry before rolling it out."
        }
    ],
    "Details": [
        {
            "Prep Time": "15 mins"
        },
        {
            "Total Time": "15 mins"
        },
        {
            "Servings": "8 "
        },
        {
            "Yield": "1 double crust"
        }
