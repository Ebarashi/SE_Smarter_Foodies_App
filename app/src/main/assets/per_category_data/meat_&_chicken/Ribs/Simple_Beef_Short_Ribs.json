{
    "title": "Simple Beef Short Ribs",
    "Category": "Ribs",
    "Ingredients": [
        {
            "1": "1 pound beef short ribs"
        },
        {
            "2": "1 teaspoon salt"
        },
        {
            "3": "0.5 teaspoon ground black pepper"
        },
        {
            "4": "2 tablespoons all-purpose flour"
        },
        {
            "5": "1 tablespoon olive oil"
        },
        {
            "6": "1 tablespoon butter"
        },
        {
            "7": "1  onion, sliced"
        },
        {
            "8": "1 clove garlic"
        },
        {
            "9": "1 (12 fluid ounce) can or bottle stout beer"
        },
        {
            "10": "1 cup beef stock"
        }
    ],
    "Directions": [
        {
            "1": "Season ribs with salt and pepper. Dredge in flour until coated; shake off excess."
        },
        {
            "2": "Heat olive oil and butter in a large skillet or Dutch oven over medium-high heat. Cook ribs until browned, about 5 minutes per side. Remove ribs and set aside."
        },
        {
            "3": "Add onion and garlic to the skillet; cook and stir until onion is tender, about 5 minutes. Return ribs to the skillet. Pour in beer while scraping the browned bits of food off the bottom of the pan. Pour in beef stock."
        },
        {
            "4": "Cover and simmer over low heat until ribs are very tender, about 2 hours."
        }
    ],
    "Details": [
        {
            "Prep Time": "15 mins"
        },
        {
            "Cook Time": " 2 hrs 15 mins"
        },
        {
            "Total Time": " 2 hrs 30 mins"
        },
        {
            "Servings": "4 "
        }
    ],
