{
    "title": "Las Vegas Galbi (Korean-Style Beef Ribs)",
    "Category": "Kalbi",
    "Ingredients": [
        {
            "1": "1.0 pounds beef short ribs, cut flanken-style"
        },
        {
            "2": "0.5 large Asian pear, cored and cubed"
        },
        {
            "3": "1  white onion"
        },
        {
            "4": "1  kiwi, peeled and diced"
        },
        {
            "5": "5 cloves garlic"
        },
        {
            "6": "1 cup soy sauce"
        },
        {
            "7": "1 cup brown sugar"
        },
        {
            "8": "0.25 cup honey"
        },
        {
            "9": "0.25 cup sesame oil"
        },
        {
            "10": "0.25 teaspoon ground black pepper"
        }
    ],
    "Directions": [
        {
            "1": "Place ribs in a large bowl of water; soak for 1 hour. Drain ribs and return to the bowl."
        },
        {
            "2": "Combine Asian pear, onion, kiwi, and garlic in a food processor and puree. Transfer to a bowl and stir in soy sauce, brown sugar, honey, sesame, oil, and black pepper. Pour marinade over ribs in the bowl. Cover with plastic wrap and marinate in the refrigerator, turning once, at least 8 hours or overnight."
        },
        {
            "3": "Strain marinade and discard."
        },
        {
            "4": "Preheat grill for medium heat and lightly oil the grate. Grill ribs until crispy outside and meat is no longer pink, about 8 minutes per side."
        }
    ],
