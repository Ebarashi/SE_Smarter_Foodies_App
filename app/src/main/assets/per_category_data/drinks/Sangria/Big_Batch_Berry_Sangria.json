{
    "title": "Big Batch Berry Sangria",
    "Category": "Sangria",
    "Ingredients": [
        {
            "1": "2 (750 milliliter) bottles sweet red wine"
        },
        {
            "2": "2 (12 ounce) cans lemon-lime soda (such as Sprite\u00ae)"
        },
        {
            "3": "2 (12 ounce) cans strawberry soda"
        },
        {
            "4": "3 cups simple syrup"
        },
        {
            "5": "3 cups orange juice"
        },
        {
            "6": "2 cups brandy"
        },
        {
            "7": "2 large  oranges, sliced"
        },
        {
            "8": "4 ounces frozen mixed berries, divided"
        },
        {
            "9": "1 cup fresh strawberries"
        }
    ],
    "Directions": [
        {
            "1": "Mix wine, sodas, simple syrup, orange juice, and brandy together in a large pitcher. Drop in orange slices and some of the frozen berries. Place in the refrigerator for 3 hours."
        },
        {
            "2": "Pour into glasses and drop in remaining frozen berries instead of ice. Garnish with strawberries."
        }
    ],
