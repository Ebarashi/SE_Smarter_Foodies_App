{
    "title": "Red Sangria with Truvia\u00ae Natural Sweetener",
    "Category": "Sangria",
    "Ingredients": [
        {
            "1": "1 Spiced Simple Syrup-"
        },
        {
            "2": "1 cup water"
        },
        {
            "3": "0.25 cup Truvia\u00ae natural sweetener spoonable**"
        },
        {
            "4": "6  whole cloves"
        },
        {
            "5": "6  whole black peppercorns, crushed"
        },
        {
            "6": "3  whole allspice berries, crushed"
        },
        {
            "7": "1 Sangria-"
        },
        {
            "8": "1 (750 milliliter) bottle red wine"
        },
        {
            "9": "3/4 cup spiced simple syrup (recipe above)"
        },
        {
            "10": "3 cups sparkling water"
        },
        {
            "11": "0.25 cup fresh orange juice"
        },
        {
            "12": "1  orange, thinly sliced"
        },
        {
            "13": "1  lemon, thinly sliced"
        },
        {
            "14": "1  lime, thinly sliced"
        },
        {
            "15": "2 cups ice cubes"
        }
    ],
    "Directions": [
        {
            "1": "Spiced Simple Syrup: Place all of the ingredients in a medium saucepot, stir."
        },
        {
            "2": "Place on high heat, bring to a boil. Reduce heat, and simmer 5 minutes."
        },
        {
            "3": "Remove from heat, allow to cool completely."
        },
        {
            "4": "Pour syrup through a strainer to remove spices."
        },
        {
            "5": "Pour syrup into a jar with lid and store refrigerated. Shake before using."
        },
        {
            "6": "Sangria: Combine wine, 3/4 cup spiced simple syrup, sparkling water, orange juice, and fruit slices. Stir briskly."
        },
        {
            "7": "Serve over ice in large red wine glasses."
        }
    ],
