{
    "title": "Easy Berry Sangria",
    "Category": "Sangria",
    "Ingredients": [
        {
            "1": "1 (750 milliliter) bottle chilled mild red wine (such as Lambrusco)"
        },
        {
            "2": "1  apple, cubed"
        },
        {
            "3": "1 cup sliced strawberries"
        },
        {
            "4": "1 cup raspberries"
        },
        {
            "5": "1 cup pitted and sliced cherries"
        },
        {
            "6": "1 cup blueberries"
        },
        {
            "7": "1 cup blackberries"
        },
        {
            "8": "0.75 cup brandy"
        },
        {
            "9": "2 cups lemon-lime soda"
        }
    ],
    "Directions": [
        {
            "1": "Mix wine, apple, strawberries, raspberries, cherries, blueberries, blackberries, and brandy together in a pitcher; refrigerate for at least 1 hour. Stir lemon-lime soda into wine mixture."
        }
    ],
