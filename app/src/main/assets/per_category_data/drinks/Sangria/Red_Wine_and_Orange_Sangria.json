{
    "title": "Red Wine and Orange Sangria",
    "Category": "Sangria",
    "Ingredients": [
        {
            "1": "0.5 cup orange juice"
        },
        {
            "2": "3 tablespoons white sugar"
        },
        {
            "3": "1 (750 milliliter) bottle red wine"
        },
        {
            "4": "1 cup orange slices"
        },
        {
            "5": "0.5 cup sliced plums"
        },
        {
            "6": "0.5 cup sliced fresh strawberries"
        },
        {
            "7": "0.25 cup brandy"
        },
        {
            "8": "0.5 cups club soda"
        },
        {
            "9": "3 cups ice, or as needed"
        },
        {
            "10": "8 sprigs fresh mint"
        }
    ],
    "Directions": [
        {
            "1": "Stir orange juice and sugar together in a pitcher until sugar dissolves. Add wine, oranges, plums, strawberries, and brandy."
        },
        {
            "2": "Cover and chill until ready to serve, 1 to 24 hours."
        },
        {
            "3": "Gently stir in club soda before serving over ice. Garnish with fresh mint sprigs."
        }
    ],
