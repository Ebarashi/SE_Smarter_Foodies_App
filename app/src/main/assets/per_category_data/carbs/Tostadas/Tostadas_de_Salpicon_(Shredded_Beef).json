{
    "title": "Tostadas de Salpicon (Shredded Beef)",
    "Category": "Tostadas",
    "Ingredients": [
        {
            "1": "1 pound beef chuck roast"
        },
        {
            "2": "2 cups beef broth"
        },
        {
            "3": "4 medium Roma tomatoes, chopped"
        },
        {
            "4": "1 medium onion, diced"
        },
        {
            "5": "2 large bay leaves"
        },
        {
            "6": "2  serrano chile peppers"
        },
        {
            "7": "2 medium limes, juiced"
        },
        {
            "8": "2 tablespoons white vinegar"
        },
        {
            "9": "1 teaspoon dried Mexican oregano"
        },
        {
            "10": "1 salt and freshly ground black pepper to taste"
        },
        {
            "11": "1 cup refried beans, warmed"
        },
        {
            "12": "8  fried tortillas"
        },
        {
            "13": "1 cup shredded lettuce, or to taste"
        },
        {
            "14": "2 medium tomatoes, chopped"
        },
        {
            "15": "0.5 cup sour cream, or to taste"
        },
        {
            "16": "0.5 cup salsa, or to taste"
        }
    ],
    "Directions": [
        {
            "1": "Combine chuck roast, broth, tomatoes, onion, bay leaves, serrano chiles, lime juice, vinegar, oregano, salt, and pepper in a large pot pot over medium-high heat. Bring to a boil, reduce heat to low, and simmer until meat is tender, about 1 1/2 hours."
        },
        {
            "2": "Remove roast from pot and shred meat with 2 forks."
        },
        {
            "3": "To assemble tostadas, spread a layer of refried beans on tortillas, layer shredded beef, lettuce, tomatoes, cheese, sour cream and salsa."
        }
    ],
