{
    "title": "Watermelon and Blue Cheese Salad",
    "Category": "Fruit Salads",
    "Ingredients": [
        {
            "1": "0.5 cup light olive oil"
        },
        {
            "2": "0.25 cup white balsamic vinegar"
        },
        {
            "3": "1 salt and ground black pepper to taste"
        },
        {
            "4": "5 pounds watermelon, cut into bite-size cubes"
        },
        {
            "5": "1 small sweet onion (such as Vidalia\u00ae), thinly sliced"
        },
        {
            "6": "2 tablespoons chopped fresh mint, or more to taste"
        },
        {
            "7": "6 ounces crumbled blue cheese"
        }
    ],
    "Directions": [
        {
            "1": "Whisk olive oil, vinegar, salt, and pepper together in a bowl until smooth."
        },
        {
            "2": "Mix watermelon, onion, and mint together in a separate bowl. Drizzle dressing over watermelon mixture and add blue cheese; toss well."
        }
    ],
