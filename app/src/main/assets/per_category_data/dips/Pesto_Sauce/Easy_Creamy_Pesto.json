{
    "title": "Easy Creamy Pesto",
    "Category": "Pesto Sauce",
    "Ingredients": [
        {
            "1": "2 tablespoons butter"
        },
        {
            "2": "1 cup heavy whipping cream"
        },
        {
            "3": "1 tablespoon all-purpose flour"
        },
        {
            "4": "1 teaspoon salt"
        },
        {
            "5": "0.5 teaspoon ground black pepper"
        },
        {
            "6": "3 tablespoons sour cream"
        },
        {
            "7": "3 tablespoons pesto, or more to taste"
        }
    ],
    "Directions": [
        {
            "1": "Melt butter in a saucepan over medium heat. Stir in heavy cream. Add flour and mix well to remove clumps. Season with salt and pepper."
        },
        {
            "2": "Stir sour cream and pesto into the saucepan. Reduce heat to medium-low; simmer, stirring, until flavors combine, 2 to 3 minutes more."
        }
    ],
