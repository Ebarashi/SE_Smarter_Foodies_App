{
    "title": "Easy Decadent Truffles",
    "Category": "Truffles",
    "Ingredients": [
        {
            "1": "3 cups semisweet chocolate chips"
        },
        {
            "2": "1 (8 ounce) package cream cheese, softened"
        },
        {
            "3": "3 cups confectioners' sugar, sifted"
        },
        {
            "4": "0.5 teaspoons vanilla"
        },
        {
            "5": "0.25 cup multicolored candy sprinkles, or as needed"
        }
    ],
    "Directions": [
        {
            "1": "Place chocolate chips in the top of a double boiler over simmering water. Stir frequently, scraping down the sides with a rubber spatula to avoid scorching, until chocolate is melted, about 5 minutes."
        },
        {
            "2": "Beat cream cheese in a large bowl until smooth. Gradually beat in confectioners' sugar until well blended. Stir in melted chocolate and vanilla until no streaks remain. Refrigerate for about 1 hour."
        },
        {
            "3": "Shape chilled mixture into 1-inch balls and roll in candy sprinkles."
        }
    ],
