{
    "title": "Vegan Chocolate Truffles",
    "Category": "Truffles",
    "Ingredients": [
        {
            "1": "8 ounces dairy-free cream cheese (such as Tofutti\u00ae)"
        },
        {
            "2": "3 cups confectioners' sugar"
        },
        {
            "3": "12 ounces vegan chocolate chips, melted"
        },
        {
            "4": "0.5 teaspoons vanilla extract"
        },
        {
            "5": "0.25 cup unsweetened cocoa powder (Optional)"
        },
        {
            "6": "0.25 cup shredded coconut (Optional)"
        },
        {
            "7": "0.25 cup chopped almonds (Optional)"
        }
    ],
    "Directions": [
        {
            "1": "Beat cream cheese until smooth. Add confectioners' sugar gradually, beating until well blended. Add melted chocolate and vanilla extract. Chill in the refrigerator for 1 hour."
        },
        {
            "2": "Shape the chocolate mixture into 1-inch balls. Roll in cocoa powder, coconut, or almonds. Store in the refrigerator."
        }
    ],
    "Details": [
        {
            "Prep Time": "10 mins"
        },
